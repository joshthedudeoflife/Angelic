<div class="small-6 large-centered columns">
	<fieldset>
		<legend>Edit Investment</legend>

			<%= form_for @company do |f| %>

			  <div><%= f.label :name %><br />
			  <%= f.text_area :name %></div>

			  <div><%= f.label :description %><br />
			  <%= f.text_area :description %></div>

			  <div><%= f.label :investment_type %><br />
			  <%= f.text_area :investment_type %></div>

			  <div><%= f.label :amount_invested %><br />
			  <%= f.text_field :amount_invested%></div>

				<div><%= f.label "Shares Owned" %><br />
			  <%= f.text_field :shares_bought %></div>

			  <div><%= f.label "Current Percent Ownership (1-100)" %><br />
			  <%= f.text_field :pct_ownership%></div>

			  <div><%= f.label :invstment_date %><br />
			  <%= f.text_field :investment_date%></div>

			  <div><%= f.submit "Update" , :class => 'button' %></div>
			<% end %>
	</fieldset>
</div>

